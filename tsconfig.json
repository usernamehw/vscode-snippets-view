{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2019",
		"outDir": "out",
		"suppressImplicitAnyIndexErrors": true,
		"lib": [
			"ES5",
			"ES2015",
			"ES2016",
			"ES2017",
			"ES2018"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
