{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"suppressImplicitAnyIndexErrors": true,
		"lib": [
			"es6",
			"es7"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
